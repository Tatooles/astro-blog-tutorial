---
import BaseLayout from "./BaseLayout.astro";
import { fade } from "astro:transitions";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <p>{frontmatter.pubDate.slice(0,10)}</p>
  <p transition:animate={fade({ duration: '2s' })}><em>{frontmatter.description}</em></p>

  <p>Written by: <a class="text-[#00539F]" href="/about/" data-astro-reload>{frontmatter.author}</a></p>

  <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

    <div class="flex flex-wrap">
    {frontmatter.tags.map((tag: any) => (
      <p class="m-1 border-[a1a1a1] border-dotted border-2 rounded-lg px-4 py-2 text-lg bg-[#f8fcfd]"><a class="text-[#00539F]" href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
  <slot />
</BaseLayout>